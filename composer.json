{
    "name": "zendframework/zendservice-recaptcha",
    "description": "OOP wrapper for the ReCaptcha web service",
    "type": "library",
    "keywords": [
        "zf2",
        "recaptcha"
    ],
    "homepage": "http://packages.zendframework.com/",
    "license": "BSD-3-Clause",
    "autoload": {
        "psr-4": {
            "ZendService\\ReCaptcha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZendServiceTest\\ReCaptcha\\": "test/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.zendframework.com/"
        }
    ],
    "require": {
        "php": ">=5.5",
        "zendframework/zend-config": "~2.0",
        "zendframework/zend-http": "~2.0",
        "zendframework/zend-json": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "^2.3",
        "zendframework/zend-validator": "~2.0"
    },
    "suggest": {
        "zendframework/zend-validator": "~2.0, if using ReCaptcha's Mailhide API"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev",
            "dev-develop": "3.0-dev"
        }
    }
}
